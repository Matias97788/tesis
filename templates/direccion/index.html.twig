{% extends 'base.html.twig' %}

{% block title %}Direccion index{% endblock %}

{% block body %}
    {% include 'menu.html.twig' %}
  <br>
<div class="contenedordos">
<div class="container mt-5 mb-5">
    <h1>Direcciones </h1>
    <br>
    <div class="row ">
        <div class="col-lg-1">
            <a href="{{ path('direccion_new') }}" class="btn btn-blue-grey">Agregar <i
                class="fas fa-plus-circle"></i></a>
        </div>
        <div class="col-lg-11"></div>
    </div>
   <div class="row">
           <div class="col-lg-12">
               <div class="table-responsive">        
                   <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead class="text-center">
                        <tr>
                <th>Id</th>
                <th>Calle</th>
                <th>Numero</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for direccion in direccions %}
            <tr>
                <td>{{ direccion.id }}</td>
                <td>{{ direccion.calle }}</td>
                <td>{{ direccion.numero }}</td>
                <td class="text-center">
                    <a href="{{ path('direccion_show', {'id': direccion.id}) }}" class="btn btn-light-green">Eliminar <i
                            class="far fa-eye ml-1"></i></a>
                    <a href="{{ path('direccion_edit', {'id': direccion.id}) }}" class="btn btn-elegant">Modificar <i
                            class="fas fa-edit ml-1"></i></a>
                </td>
            </tr>
        {% else %}
                        <tr>
                            <td colspan="6">No existen datos</td>
                        </tr>
                        {% endfor %}
                    </tbody>       
                  </table>                  
               </div>
           </div>
   </div>  
</div>
</div>
{% include 'footer.html.twig' %}
{% endblock %}