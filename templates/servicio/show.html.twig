{% extends 'base.html.twig' %}

{% block title %}Servicio{% endblock %}

{% block body %}
{% include 'menu.html.twig' %}
<div class="container mt-5">
    <br>
     <div class="row ">
        <div class="col-md-12 ">
    <h1>Servicios</h1>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4"></div>
        <div class="col-md-4 text-center"><a href="{{ path('servicio_index') }}" class="btn btn-primary">Volver</a></div>
  </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ servicio.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ servicio.nombre }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ servicio.correo }}</td>
            </tr>
            <tr>
                <th>HorarioAtencion</th>
                <td>{{ servicio.horarioAtencion }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ servicio.telefono }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td><img src="{{ asset('uploads/brochures/' ~ servicio.brochureFilename) }}" alt=""></td>
            </tr>
        </tbody>
    </table>


    {{ include('servicio/_delete_form.html.twig') }}
</div>    
</div>
</div>
{% include 'footer.html.twig' %}
    
{% endblock %}