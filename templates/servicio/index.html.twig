{% extends 'base.html.twig' %}

{% block title %}Servicio index{% endblock %}

{% block body %}
{% include 'menu.html.twig' %}
<br>
<div class="contenedordos">
<div class="container mt-5 mb-5">
    <h1>Servicios </h1>
    <br>
    <div class="row">
        <div class="col-lg-1">
            <a href="{{ path('servicio_new') }}" class="btn btn-blue-grey">Agregar <i
                class="fas fa-plus-circle"></i></a>
        </div>
        <div class="col-lg-11"></div>
    </div>
   <div class="row">
           <div class="col-lg-12">
               <div class="table-responsive">        
                   <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead class="text-center">
                        <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Correo</th>
                <th>HorarioAtencion</th>
                <th>Telefono</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for servicio in servicios %}
            <tr>
                <td>{{ servicio.id }}</td>
                <td>{{ servicio.nombre }}</td>
                <td>{{ servicio.correo }}</td>
                <td>{{ servicio.horarioAtencion }}</td>
                <td>{{ servicio.telefono }}</td>
                <td>{{ servicio.brochurefilename }}</td>
                <td class="text-center">
                    <a href="{{ path('servicio_show', {'id': servicio.id}) }}" class="btn btn-light-green">Eliminar <i
                            class="fas fa-trash-alt ml-1"></i></a>
                    <a href="{{ path('servicio_edit', {'id': servicio.id}) }}" class="btn btn-elegant">Modificar <i
                            class="fas fa-edit ml-1"></i></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No existen datos</td>
            </tr>
        {% endfor %}
       
    </tbody>       
  </table>                  
</div>
</div>
</div>  
</div>
</div>
{% include 'footer.html.twig' %}
{% endblock %}