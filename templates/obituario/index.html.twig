{% extends 'base.html.twig' %}

{% block title %}Obituario index{% endblock %}

{% block body %}
{% include 'menu.html.twig' %}
<br>
<div class="contenedordos">
<div class="container mt-5 mb-5">
    <h1>Obituario </h1>
    <br>
    <div class="row ">
        <div class="col-lg-1">
            <a href="{{ path('obituario_new') }}" class="btn btn-blue-grey">Agregar <i
                class="fas fa-plus-circle"></i></a>
        </div>
        <div class="col-lg-11"></div>
    </div>
   <div class="row">
           <div class="col-lg-12">
               <div class="table-responsive">        
                   <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead class="text-center">
                        <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Fecha Nacimiento</th>
                <th>Fecha Defuncion</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for obituario in obituarios %}
            <tr>
                <td>{{ obituario.id }}</td>
                <td>{{ obituario.nombre }}</td>
                <td>{{ obituario.descripcion }}</td>
                <td>{{ obituario.fechaNacimiento }}</td>
                <td>{{ obituario.fechaMuerte }}</td>
                <td class="text-center">
                    <a href="{{ path('obituario_show', {'id': obituario.id}) }}" class="btn btn-light-green">Eliminar <i
                            class="far fa-eye ml-1"></i></a>
                    <a href="{{ path('obituario_edit', {'id': obituario.id}) }}" class="btn btn-elegant">Modificar <i
                            class="fas fa-edit ml-1"></i></a>
                </td>
            </tr>
            {% else %}
                        <tr>
                            <td colspan="6">No existen datos</td>
                        </tr>
                        {% endfor %}
                    </tbody>       
                  </table>                  
               </div>
           </div>
   </div>  
</div>
</div>
{% include 'footer.html.twig' %}
{% endblock %}