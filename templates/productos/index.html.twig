{% extends 'base.html.twig' %}

{% block title %}Productos index{% endblock %}

{% block body %}
{% include 'menu.html.twig' %}

  <br>
<div class="contenedordos">
<div class="container mt-5 mb-5">
    <h1>Productos </h1>
    <br>
    <div class="row ">
          <div class="col-lg-1">
            <a href="{{ path('productos_new') }}" class="btn btn-blue-grey">Agregar <i
                class="fas fa-plus-circle"></i></a>
        </div>
        <div class="col-lg-11"></div>
    </div>
   <div class="row">
           <div class="col-lg-12">
               <div class="table-responsive">        
                   <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead class="text-center">
                        <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Brochurefilename</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.descripcion }}</td>
                <td>{{ producto.brochurefilename }}</td>
                <td class="text-center">
                    <a href="{{ path('productos_show', {'id': producto.id}) }}" class="btn btn-light-green">Eliminar <i
                            class="fas fa-trash-alt ml-1"></i></a>
                    <a href="{{ path('productos_edit', {'id': producto.id}) }}" class="btn btn-elegant">Modificar <i
                            class="fas fa-edit ml-1"></i></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No existen datos</td>
            </tr>
         {% endfor %}
                    </tbody>       
                  </table>                  
               </div>
           </div>
   </div>  
</div>
</div>
{% include 'footer.html.twig' %}
{% endblock %}